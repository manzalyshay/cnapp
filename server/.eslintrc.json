{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:jest/recommended",
    "eslint:recommended"
  ],
  "plugins": [
    "prettier",
    "import",
    "jest"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": 0,
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "no-unused-vars": 1,
    "no-underscore-dangle": 0,
    "no-undef": 1,
    "import/no-extraneous-dependencies": 0
  }
}
